{
	"name": "@gitbutler/shared",
	"version": "0.0.1",
	"description": "Shared utilities for GitButler",
	"scripts": {
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm check --watch",
		"package": "pnpm run --sequential \"/^package:.*/\"",
		"prepublishOnly": "pnpm run package"
	},
	"exports": {
		"./*": {
			"import": "./dist/*.js",
			"types": "./dist/*.d.ts"
		},
		"./*.json": {
			"import": "./dist/*.json",
			"types": "./dist/*.json"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"type": "module"
}
